html
  head
    meta(charset='utf-8')
  body
    h1 
      a(href='/topic') Server Side JavsScript - Node.js
    ul
       each val in topics
        li 
          a(href='/topic/' + val) #{val}
    article
      form(action='/topic' method='post')
        p
          input(type='text' name='title' placeholder='제목')
        p
          textarea(name="desc", cols="30", rows="10" placeholder='내용')
        p 
          input(type="submit")
